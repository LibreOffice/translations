"05120000.xhp\n"
"tit\n"
"help.text"
msgid "Column"
msgstr "Στήλη"

#: 05120000.xhp
msgctxt ""
"05120000.xhp\n"
"hd_id3154762\n"
"1\n"
"help.text"
msgid "<link href=\"text/swriter/01/05120000.xhp\" name=\"Column\">Column</link>"
msgstr "<link href=\"text/swriter/01/05120000.xhp\" name=\"Στήλη\">Στήλη</link>"

#: 05120000.xhp
