#. v2rEL
#: hidden_text.xhp
msgctxt ""
"hidden_text.xhp\n"
"hd_id3148675\n"
"help.text"
msgid "To Hide a Section"
msgstr "Για να αποκρύψετε μια ενότητα"

#. mCT7Z
#: hidden_text.xhp
msgctxt ""
"hidden_text.xhp\n"
"par_id3148697\n"
"help.text"
msgid "Select the text that you want to hide in your document."
msgstr "Επιλέξτε το κείμενο το οποίο επιθυμείτε να αποκρύψετε."

#. Jkvgn
#: hidden_text.xhp
msgctxt ""
"hidden_text.xhp\n"
"par_id3153019\n"
"help.text"
msgid "Choose <menuitem>Insert - Section</menuitem>."
msgstr "Επιλέξτε <menuitem>Εισαγωγή - Ενότητα</menuitem>."

#. jFn7h
#: hidden_text.xhp
msgctxt ""
"hidden_text.xhp\n"
"par_id3148950\n"
