msgstr "Trích yếu tự động thành trình chiếu"

#: 01160400.xhp#hd_id3151183.1.help.text
msgid "<link href=\"text/swriter/01/01160400.xhp\" name=\"AutoAbstract to Presentation\">AutoAbstract to Presentation</link>"
