msgctxt ""
"consolidate.xhp\n"
"par_id3153039\n"
"help.text"
msgid "<link href=\"text/scalc/01/12070000.xhp\" name=\"Data - Consolidate\">Data - Consolidate</link>"
msgstr "<link href=\"text/scalc/01/12070000.xhp\" name=\"Dati - Consolida\">Dati - Consolida</link>"

