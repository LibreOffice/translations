#: line_edit.xhp
msgctxt ""
"line_edit.xhp\n"
"par_id3150261\n"
"75\n"
"help.text"
msgid "Click the point you want to delete."
msgstr "Fate clic sul punto da eliminare."

#: line_edit.xhp
msgctxt ""
"line_edit.xhp\n"
"par_id3143230\n"
"76\n"
"help.text"
