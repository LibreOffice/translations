#: 3d_create.xhp
msgctxt ""
"3d_create.xhp\n"
"hd_id3145410\n"
"65\n"
"help.text"
msgid "To convert a 2D object to a 3D rotation object:"
msgstr "Per convertire un oggetto 2D in un solido di rotazione 3D:"

